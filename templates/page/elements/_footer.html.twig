<footer class="pt-3 max-w-screen-xl flex flex-wrap items-center justify-between mx-auto p-4">
    <ul>
        {% if footerItems is defined and footerItems|length > 0 %}
            {% for item in footerItems %}
                <li>
                    {% if item.children %}
                        {% for child in item.children %}
                            <a aria-current="page" href="{{ absolute_url(path('page_index', {'uri' : child.current.page.slug})) }}">
                                {{ child.current.name }}
                            </a>
                        {% endfor %}
                    {% endif %}
                </li>
            {% endfor %}
        {% endif %}
    </ul>

    <div>
        Â©
        {{ 'now' | date('Y') }}
        Copyright
    </div>

    {% include "base/elements/_axeptio.html.twig" %}
</footer>
