{% extends 'exceptions/base/base.html.twig' %}

{% block title %}{{ exception is defined and exception.statusCode ? exception.statusCode : '404' }} - {{ exception is defined and exception.message ? exception.message : 'Not Found' }}{% endblock %}

{% block body %}
    <div class="flex items-center justify-center h-screen bg-gray-100 text-gray-800">
        <div class="text-center">
            <h1 class="text-6xl font-bold">{{ exception is defined and exception.statusCode ? exception.statusCode : '404' }}</h1>
            <p class="text-2xl md:text-3xl font-light leading-normal">{{ exception is defined and exception.message ? exception.message : 'Not Found' }}</p>
            <a href="/" class="mt-6 inline-block bg-blue-500 text-white font-bold py-2 px-4 rounded hover:bg-blue-600 transition duration-300">Go Home</a>
        </div>
    </div>
{% endblock %}
