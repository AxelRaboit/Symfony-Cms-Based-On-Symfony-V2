{% extends "backend/base/base.html.twig" %}

{% block title %}{{ parent() }} - Créer un utilisateur Backend{% endblock %}

{% block body %}
    {% include 'backend/dashboard/elements/_side-menu.html.twig' %}
    <div class="p-2 sm:ml-64">
        <div class="border-2 border-gray-200 border-dashed rounded-lg dark:border-gray-700">
            <div class="p-4">

                <h1 class="text-2xl font-semibold mb-2">Créer un utilisateur Backend</h1>

                {{ form_start(form) }}

                <div class="mb-2">
                    {{ form_row(form.username, { 'attr': { 'class': 'w-full p-1 border border-gray-300 rounded focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500' } }) }}
                </div>

                <div class="mb-4">
                    {{ form_row(form.email, { 'attr': { 'class': 'w-full p-1 border border-gray-300 rounded focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500' } }) }}
                </div>

                <div class="mb-4">
                    {{ form_row(form.password, { 'attr': { 'class': 'w-full p-1 border border-gray-300 rounded focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500' } }) }}
                </div>

                <div class="flex flex-wrap">
                    <div class="w-full md:w-auto mb-2 md:mb-0">
                        <button type="submit"
                                class="w-full text-xs px-3 h-8 leading-tight text-gray-500 bg-white border border-gray-300 rounded hover:bg-gray-100 hover:text-gray-700 dark:bg-gray-800 dark:border-gray-700 dark:text-gray-400 dark:hover:bg-gray-700 dark:hover:text-white">
                            Créer
                        </button>
                    </div>

                    <div id="container-reset-button" class="w-full md:w-auto mb-2 md:mb-0 md:ml-2">
                        <a href="{{ path('app_backend_user_backend_list') }}">
                            <button type="button"
                                    class="w-full text-xs px-3 h-8 leading-tight text-gray-500 bg-white border border-gray-300 rounded hover:bg-gray-100 hover:text-gray-700 dark:bg-gray-800 dark:border-gray-700 dark:text-gray-400 dark:hover:bg-gray-700 dark:hover:text-white">
                                Retour
                            </button>
                        </a>
                    </div>
                </div>

                {{ form_end(form) }}

            </div>
        </div>
    </div>
{% endblock %}
