<div id="confirmation-modal" class="hidden fixed inset-0 bg-gray-600 bg-opacity-50 overflow-y-auto h-full p-2 sm:ml-64 z-50">
    <div class="relative top-1/4 mx-auto p-5 border shadow-lg rounded-md bg-white max-w-xs sm:max-w-md md:max-w-md lg:max-w-md xl:max-w-1xl">
        <div class="text-center">
            <h3 class="text-lg leading-6 font-medium text-gray-900" id="confirmation-modal-title">
                {# Popup title #}
            </h3>
            <div class="mt-2 px-4 py-3">
                <p class="text-sm text-gray-500" id="confirmation-modal-message">
                    {# Popup message #}
                </p>
            </div>
            <div class="flex justify-center gap-4 mt-4">
                <button id="confirmation-modal-cancel" class="px-4 py-2 text-xs leading-tight text-gray-500 bg-white border border-gray-300 rounded hover:bg-gray-100 hover:text-gray-700 dark:bg-gray-800 dark:border-gray-700 dark:text-gray-400 dark:hover:bg-gray-700 dark:hover:text-white">
                    Annuler
                </button>
                <button id="confirmation-modal-confirm" class="px-4 py-2 text-xs leading-tight text-gray-500 bg-white border border-red-300 rounded hover:bg-red-100 hover:text-gray-700 dark:bg-red-800 dark:border-red-700 dark:text-gray-400 dark:hover:bg-red-700 dark:hover:text-white">
                    Confirmer
                </button>
            </div>
        </div>
    </div>
</div>
