<div id="confirmation-popup" class="hidden fixed inset-0 bg-gray-600 bg-opacity-50 overflow-y-auto h-full w-full">
    <div class="relative top-20 mx-auto p-5 border w-96 shadow-lg rounded-md bg-white">
        <div class="mt-3 text-center">
            <h3 class="text-lg leading-6 font-medium text-gray-900" id="confirmation-popup-title">
                {# Popup title #}
            </h3>
            <div class="mt-2 px-7 py-3">
                <p class="text-sm text-gray-500" id="confirmation-popup-message">
                    {# Popup message #}
                </p>
            </div>
            <div class="items-center px-4 py-3">
                <button id="confirmation-popup-cancel" class="px-4 py-2 bg-gray-500 text-white text-base font-medium rounded-md w-auto shadow-sm hover:bg-gray-600">
                    Annuler
                </button>
                <button id="confirmation-popup-confirm" class="px-4 py-2 bg-blue-600 text-white text-base font-medium rounded-md w-auto shadow-sm hover:bg-blue-700 ml-3">
                    Confirmer
                </button>
            </div>
        </div>
    </div>
</div>