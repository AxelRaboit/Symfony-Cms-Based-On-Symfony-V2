<div id="create-media-modal"
     class="hidden fixed inset-0 bg-gray-600 bg-opacity-50 overflow-y-auto h-full p-2 sm:ml-64 z-50">
    <div class="relative top-1/4 mx-auto p-5 border shadow-lg rounded-md bg-white max-w-xs sm:max-w-md md:max-w-md lg:max-w-md xl:max-w-1xl">
        <div class="text-center">
            <h3 class="text-lg leading-6 font-medium text-gray-900" id="confirmation-modal-title">
                Importer une image
            </h3>
            <div class="mt-2 px-4 py-3">
                {{ form_start(form, {'attr': {'id': 'form-create-media-image-js'}}) }}

                <div class="text-xs">
                    {{ form_label(form.imageFile, null, { 'label_attr': { 'class': 'text-gray-900 dark:text-white'}}) }}
                    {{ form_widget(form.imageFile, { 'attr': { 'class': 'w-full text-xs p-1 border border-gray-300 rounded focus:ring-gray-500 focus:border-gray-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-gray-500 dark:focus:border-gray-500' } }) }}
                    {% if form.imageFile.vars.errors %}
                        <div class="mt-1 text-red-600 text-xs">
                            {% for error in form.imageFile.vars.errors %}
                                <p>{{ error.message }}</p>
                            {% endfor %}
                        </div>
                    {% endif %}
                </div>

                <div class="flex justify-center gap-4 mt-4">
                    <button id="create-media-modal-cancel" type="button"
                            class="w-full px-4 py-2 text-xs leading-tight text-gray-500 bg-white border border-gray-300 rounded hover:bg-gray-100 hover:text-gray-700 dark:bg-gray-800 dark:border-gray-700 dark:text-gray-400 dark:hover:bg-gray-700 dark:hover:text-white">
                        Annuler
                    </button>
                    <button type="submit"
                            id="submit-button-create-media-image-js"
                            class="w-full text-xs px-3 h-8 leading-tight text-gray-500 bg-white border border-gray-300 rounded hover:bg-gray-100 hover:text-gray-700 dark:bg-gray-800 dark:border-gray-700 dark:text-gray-400 dark:hover:bg-gray-700 dark:hover:text-white">
                        Valider
                    </button>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
</div>
