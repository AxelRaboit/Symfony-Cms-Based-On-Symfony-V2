{% extends "backend/admin/base/base.html.twig" %}

{% block title %}{{ parent() }} - Modifier la donnée{% endblock %}

{% block body %}
    {{ encore_entry_link_tags('backend/admin/dashboard/advancedData/dataEnum/edit') }}

    {% include 'backend/admin/dashboard/elements/_side-menu.html.twig' %}

    <div class="p-2 sm:ml-64">
        <div class="border-2 border-gray-200 border-dashed rounded-lg dark:border-gray-700">
            <div class="p-4">
                <h1 class="text-2xl font-semibold mb-2">Modifier la donnée</h1>
                {{ form_start(form, {'attr': {'id': 'form-edit-data-enum-js'}}) }}

                <div class="mb-2 text-xs">
                    {{ form_label(form.name) }}
                    {{ form_widget(form.name, { 'attr': { 'class': 'text-xs w-full p-1 border border-gray-300 rounded focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500' } }) }}
                    {% if form.name.vars.errors %}
                        <div class="mt-1 text-red-600 text-xs">
                            {% for error in form.name.vars.errors %}
                                <p>{{ error.message }}</p>
                            {% endfor %}
                        </div>
                    {% endif %}
                </div>

                <div class="mb-4 text-xs">
                    {{ form_label(form.category) }}
                    {{ form_widget(form.category, { 'attr': { 'class': 'text-xs w-full p-1 border border-gray-300 rounded focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500' } }) }}
                    {% if form.category.vars.errors %}
                        <div class="mt-1 text-red-600 text-xs">
                            {% for error in form.category.vars.errors %}
                                <p>{{ error.message }}</p>
                            {% endfor %}
                        </div>
                    {% endif %}
                </div>

                <div class="mb-4 text-xs">
                    {{ form_label(form.value) }}
                    {{ form_widget(form.value, { 'attr': { 'class': 'text-xs w-full p-1 border border-gray-300 rounded focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500' } }) }}
                    {% if form.value.vars.errors %}
                        <div class="mt-1 text-red-600 text-xs">
                            {% for error in form.value.vars.errors %}
                                <p>{{ error.message }}</p>
                            {% endfor %}
                        </div>
                    {% endif %}
                </div>

                <div class="mb-4 text-xs">
                    {{ form_label(form.devKey) }}
                    {{ form_widget(form.devKey, { 'attr': { 'class': 'text-xs w-full p-1 border border-gray-300 rounded focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500' } }) }}
                    {% if form.devKey.vars.errors %}
                        <div class="mt-1 text-red-600 text-xs">
                            {% for error in form.devKey.vars.errors %}
                                <p>{{ error.message }}</p>
                            {% endfor %}
                        </div>
                    {% endif %}
                </div>

                <div class="flex flex-wrap mt-4">
                    <div class="w-full md:w-auto mb-2 md:mb-0">
                        <button type="submit"
                                id="submit-button-edit-data-enum-js"
                                class="w-full text-xs px-3 h-8 leading-tight text-gray-500 bg-white border border-gray-300 rounded hover:bg-gray-100 hover:text-gray-700 dark:bg-gray-800 dark:border-gray-700 dark:text-gray-400 dark:hover:bg-gray-700 dark:hover:text-white">
                            Modifier
                        </button>
                    </div>

                    <div id="container-reset-button" class="w-full md:w-auto mb-2 md:mb-0 md:ml-2">
                        <a href="{{ path('app_backend_advanced_data_data_enum_list') }}">
                            <button type="button"
                                    class="w-full text-xs px-3 h-8 leading-tight text-gray-500 bg-white border border-gray-300 rounded hover:bg-gray-100 hover:text-gray-700 dark:bg-gray-800 dark:border-gray-700 dark:text-gray-400 dark:hover:bg-gray-700 dark:hover:text-white">
                                Retour
                            </button>
                        </a>
                    </div>
                </div>

                {{ form_end(form) }}
            </div>
        </div>
    </div>

    {{ encore_entry_script_tags('backend/admin/dashboard/advancedData/dataEnum/edit') }}
{% endblock %}
