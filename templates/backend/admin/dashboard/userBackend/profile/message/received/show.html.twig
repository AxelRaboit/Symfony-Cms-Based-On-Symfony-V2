{% extends 'backend/admin/base/base.html.twig' %}

{% block title %}{{ parent() }} - Message{% endblock %}

{% block body %}
    {% include 'backend/admin/dashboard/elements/_side-menu.html.twig' %}

    <div class="p-2 sm:ml-64">
        <div class="p-2">
            <h1 class="text-2xl font-semibold mb-2 text-gray-900 dark:text-white">Message</h1>

            <div class="flex flex-wrap mb-2">
                <div id="container-reset-button-js" class="w-full md:w-auto mb-2 md:mb-0">
                    <a href="{{ path('app_backend_user_backend_profile_message_create', {'id': app.user.id}) }}">
                        <button type="button"
                                class="block w-full sm:inline-block md:w-auto text-xs px-3 h-8 leading-tight text-gray-500 bg-white border border-gray-300 rounded hover:bg-gray-100 hover:text-gray-700 dark:bg-gray-800 dark:border-gray-700 dark:text-gray-400 dark:hover:bg-gray-700 dark:hover:text-white">
                            Envoyer un message
                        </button>
                    </a>
                </div>
            </div>

            <div class="m">
                <div class="bg-gray-100 dark:bg-gray-800 rounded px-4 py-3 mb-4">
                    <p class="text-sm text-gray-500 dark:text-gray-400">{{ backendMessage.sender.email }} &rarr; {{ backendMessage.receiver.email }}</p>
                    <p class="text-sm text-gray-500 dark:text-gray-400">{{ backendMessage.createdAt|date('d/m/Y Ã  H:i') }}</p>
                </div>

                <div class="bg-white dark:bg-gray-800 rounded px-4 py-3 border border-gray-300">
                    {% if backendMessage.subject is not null %}
                        <p class="text-lg font-semibold text-gray-500 dark:text-gray-300">{{ backendMessage.subject }}</p>
                    {% else %}
                        <p class="text-lg font-semibold text-gray-500 dark:text-gray-300">Sans sujet</p>
                    {% endif %}
                    <p class="text-xs text-gray-800 dark:text-white">{{ backendMessage.message }}</p>
                </div>
            </div>

            <div class="flex flex-wrap mt-2">
                <div id="container-reset-button" class="w-full md:w-auto mb-2">
                    <a href="{{ returnReferer('app_backend_user_backend_profile_message_list', app.user.id) }}">
                        <button type="button"
                                class="w-full text-xs px-3 h-8 leading-tight text-gray-500 bg-white border border-gray-300 rounded hover:bg-gray-100 hover:text-gray-700 dark:bg-gray-800 dark:border-gray-700 dark:text-gray-400 dark:hover:bg-gray-700 dark:hover:text-white">
                            Retour
                        </button>
                    </a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}


