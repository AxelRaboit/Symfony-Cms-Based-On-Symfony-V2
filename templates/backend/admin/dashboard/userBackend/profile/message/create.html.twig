{% extends "backend/admin/base/base.html.twig" %}

{% set pageTitle = "Envoyer un message" %}

{% block title %}{{ parent() }} - {{ pageTitle }}{% endblock %}

{% block body %}
    {{ encore_entry_link_tags('backend/admin/dashboard/content/page/create') }}

    {% include 'backend/admin/dashboard/elements/_side-menu.html.twig' %}
    <div class="p-4 sm:ml-64">
        <h1 class="text-2xl font-semibold mb-2 text-gray-900 dark:text-white">{{ pageTitle }}</h1>
        {{ form_start(form, {'attr': {'id': 'form-create-page-js'}}) }}

        <div class="grid grid-cols-1 sm:grid-cols-2 gap-2 mb-2">
            <div class="text-xs">
                {{ form_label(form.sender, null, { 'label_attr': { 'class': 'text-gray-900 dark:text-white'}}) }}
                <span class="text-red-500 font-semibold">*</span>
                {{ form_widget(form.sender, { 'attr': { 'class': 'text-xs w-full p-1 border border-gray-300 rounded focus:ring-gray-500 focus:border-gray-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-gray-500 dark:focus:border-gray-500' } }) }}
                {% if form.sender.vars.errors %}
                    <div class="mt-1 text-red-600 text-xs">
                        {% for error in form.sender.vars.errors %}
                            <p>{{ error.message }}</p>
                        {% endfor %}
                    </div>
                {% endif %}
            </div>
            <div class="text-xs">
                {{ form_label(form.receiver, null, { 'label_attr': { 'class': 'text-gray-900 dark:text-white'}}) }}
                <span class="text-red-500 font-semibold">*</span>
                {{ form_widget(form.receiver, { 'attr': { 'class': 'text-xs w-full p-1 border border-gray-300 rounded focus:ring-gray-500 focus:border-gray-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-gray-500 dark:focus:border-gray-500' } }) }}
                {% if form.receiver.vars.errors %}
                    <div class="mt-1 text-red-600 text-xs">
                        {% for error in form.receiver.vars.errors %}
                            <p>{{ error.message }}</p>
                        {% endfor %}
                    </div>
                {% endif %}
            </div>
        </div>

        <div class="grid grid-cols-1 gap-2 mb-2">
            <div class="text-xs">
                {{ form_label(form.subject, null, { 'label_attr': { 'class': 'text-gray-900 dark:text-white'}}) }}
                {{ form_widget(form.subject, { 'attr': { 'class': 'text-xs w-full p-1 border border-gray-300 rounded focus:ring-gray-500 focus:border-gray-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-gray-500 dark:focus:border-gray-500' } }) }}
                {% if form.subject.vars.errors %}
                    <div class="mt-1 text-red-600 text-xs">
                        {% for error in form.subject.vars.errors %}
                            <p>{{ error.message }}</p>
                        {% endfor %}
                    </div>
                {% endif %}
            </div>
        </div>

        <div class="w-full mb-2">
            <div class="text-xs">
                {{ form_label(form.message, null, { 'label_attr': { 'class': 'text-gray-900 dark:text-white'}}) }}
                <span class="text-red-500 font-semibold">*</span>
                {{ form_widget(form.message, { 'attr': { 'class': 'text-xs w-full p-1 border border-gray-300 rounded focus:ring-gray-500 focus:border-gray-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-gray-500 dark:focus:border-gray-500' } }) }}
                {% if form.message.vars.errors %}
                    <div class="mt-1 text-red-600 text-xs">
                        {% for error in form.message.vars.errors %}
                            <p>{{ error.message }}</p>
                        {% endfor %}
                    </div>
                {% endif %}
            </div>
        </div>

        <div class="flex flex-wrap">
            <div class="w-full md:w-auto mb-2 md:mb-0">
                <button type="submit"
                        id="submit-button-create-page-js"
                        class="w-full text-xs px-3 h-8 leading-tight text-gray-500 bg-white border border-gray-300 rounded hover:bg-gray-100 hover:text-gray-700 dark:bg-gray-800 dark:border-gray-700 dark:text-gray-400 dark:hover:bg-gray-700 dark:hover:text-white">
                    Envoyer
                </button>
            </div>

            <div id="container-reset-button" class="w-full md:w-auto mb-2 md:mb-0 md:ml-2">
                <a href="{{ returnReferer('app_backend_content_page_list') }}">
                    <button type="button"
                            class="w-full text-xs px-3 h-8 leading-tight text-gray-500 bg-white border border-gray-300 rounded hover:bg-gray-100 hover:text-gray-700 dark:bg-gray-800 dark:border-gray-700 dark:text-gray-400 dark:hover:bg-gray-700 dark:hover:text-white">
                        Retour
                    </button>
                </a>
            </div>
        </div>

        {{ form_end(form) }}
    </div>

    {{ encore_entry_script_tags('backend/admin/dashboard/content/page/create') }}
{% endblock %}
