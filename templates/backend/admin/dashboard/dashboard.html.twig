{% extends 'backend/admin/base/base.html.twig' %}

{% block title %}{{ parent() }} - Tableau de bord{% endblock %}

{% block body %}
    {{ encore_entry_link_tags('backend/admin/dashboard') }}

    {% include 'backend/admin/dashboard/elements/_side-menu.html.twig' %}

    <div class="p-4 sm:ml-64">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-4">
            <div class="border border-gray-300 dark:border-gray-700 rounded mb-2">
                <div class="w-full text-xs font-semibold bg-gray-900 dark:bg-gray-600 text-white p-2 rounded-t">
                    <h2>Paris</h2>
                </div>
                <span class="text-2xl text-gray-900 dark:text-white p-2" id="dashboard-france-hour">
                    {# Inject hour #}
                </span>
            </div>

            <div class="border border-gray-300 dark:border-gray-700 rounded mb-2">
                <div class="w-full text-xs font-semibold bg-gray-900 dark:bg-gray-600 text-white p-2 rounded-t">
                    <h2>Londres</h2>
                </div>
                <span class="text-2xl text-gray-900 dark:text-white p-2" id="dashboard-london-hour">
                    {# Inject hour #}
                </span>
            </div>

            <div class="border border-gray-300 dark:border-gray-700 rounded mb-2">
                <div class="w-full text-xs font-semibold bg-gray-900 dark:bg-gray-600 text-white p-2 rounded-t">
                    <h2>Québec</h2>
                </div>
                <span class="text-2xl text-gray-900 dark:text-white p-2" id="dashboard-quebec-hour">
                    {# Inject hour #}
                </span>
            </div>

            <div class="border border-gray-300 dark:border-gray-700 rounded mb-2">
                <div class="w-full text-xs font-semibold bg-gray-900 dark:bg-gray-600 text-white p-2 rounded-t">
                    <h2>Los Angeles</h2>
                </div>
                <span class="text-2xl text-gray-900 dark:text-white p-2" id="dashboard-los-angeles-hour">
                    {# Inject hour #}
                </span>
            </div>

            <div class="border border-gray-300 dark:border-gray-700 rounded mb-2">
                <div class="w-full text-xs font-semibold bg-gray-900 dark:bg-gray-600 text-white p-2 rounded-t">
                    <h2>Taiwan</h2>
                </div>
                <span class="text-2xl text-gray-900 dark:text-white p-2" id="dashboard-taiwan-hour">
                    {# Inject hour #}
                </span>
            </div>

            <div class="border border-gray-300 dark:border-gray-700 rounded mb-2">
                <div class="w-full text-xs font-semibold bg-gray-900 dark:bg-gray-600 text-white p-2 rounded-t">
                    <h2>Japon</h2>
                </div>
                <span class="text-2xl text-gray-900 dark:text-white p-2" id="dashboard-japan-hour">
                    {# Inject hour #}
                </span>
            </div>
        </div>

        <div class="grid grid-cols-1 sm:grid-cols-2 gap-4 mb-4">
            <div class="flex justify-between items-center rounded bg-gray-50 h-28 dark:bg-gray-800 p-5">
                <div class="flex flex-col">
                    <h2 class="text-xs sm:text-sm text-gray-900 dark:text-white">Nombre de pages publiées</h2>
                    <div>
                        <p class="text-2xl text-gray-900 dark:text-white">
                            {{ publishedPageCount ~ '/' ~ pageCount }}
                        </p>
                    </div>
                </div>
                <div>
                    <i class="fa-solid fa-file-lines text-2xl text-gray-900 dark:text-white"></i>
                </div>
            </div>

            <div class="flex justify-between items-center rounded bg-gray-50 h-28 dark:bg-gray-800 p-5">
                <div class="flex flex-col">
                    <h2 class="text-xs sm:text-sm text-gray-900 dark:text-white">Nombre d'images</h2>
                    <div>
                        <p class="text-2xl text-gray-900 dark:text-white">
                            {{ imageCount }}
                        </p>
                    </div>
                </div>
                <div>
                    <i class="fa-solid fa-image text-2xl text-gray-900 dark:text-white"></i>
                </div>
            </div>
        </div>

        <div class="grid grid-cols-2 gap-4 mb-4">
            <div class="mb-2 bg-gray-100 dark:bg-gray-800 rounded inline-block rounded border border-gray-300">
                <div class="w-full text-xs font-semibold bg-gray-900 dark:bg-gray-600 text-white p-2 rounded-t">
                    <h2>Publications</h2>
                </div>
                <div class="p-2 h-96">{{ render_chart(chartPublishedPagesByPageTypes, {'class': 'h-full'}) }}</div>
            </div>
            <div class="mb-2 bg-gray-100 dark:bg-gray-800 rounded inline-block rounded border border-gray-300">
                <div class="w-full text-xs font-semibold bg-gray-900 dark:bg-gray-600 text-white p-2 rounded-t">
                    <h2>Nombre de pages par types</h2>
                </div>
                <div class="p-2 h-96">{{ render_chart(chartPageTypes, {'class': 'h-full'}) }}</div>
            </div>
        </div>

        <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-4 mb-4">

            <div class="flex justify-between items-center rounded bg-gray-50 h-28 dark:bg-gray-800 p-5">
                <div class="flex flex-col">
                    <h2 class="text-xs sm:text-sm text-gray-900 dark:text-white">Nombre d'utilisateurs Backend</h2>
                    <div>
                        <p class="text-2xl text-gray-900 dark:text-white">
                            {{ userBackendCount }}
                        </p>
                    </div>
                </div>
                <div>
                    <i class="fa-solid fa-user text-2xl text-gray-900 dark:text-white"></i>
                </div>
            </div>

            <div class="flex justify-between items-center rounded bg-gray-50 h-28 dark:bg-gray-800 p-5">
                <div class="flex flex-col">
                    <h2 class="text-xs sm:text-sm text-gray-900 dark:text-white">Nombre d'utilisateurs
                        d'application</h2>
                    <div>
                        <p class="text-2xl text-gray-900 dark:text-white">
                            {{ userApplicationCount }}
                        </p>
                    </div>
                </div>
                <div>
                    <i class="fa-solid fa-user text-2xl text-gray-900 dark:text-white"></i>
                </div>
            </div>

            <div class="flex justify-between items-center rounded bg-gray-50 h-28 dark:bg-gray-800 p-5">
                <div class="flex flex-col">
                    <h2 class="text-xs sm:text-sm text-gray-900 dark:text-white">Nombre de données</h2>
                    <div>
                        <p class="text-2xl text-gray-900 dark:text-white">
                            {{ dataEnumCount }}
                        </p>
                    </div>
                </div>
                <div>
                    <i class="fa-solid fa-database text-2xl text-gray-900 dark:text-white"></i>
                </div>
            </div>
            <div class="flex justify-between items-center rounded bg-gray-50 h-28 dark:bg-gray-800 p-5">
                <div class="flex flex-col">
                    <h2 class="text-xs sm:text-sm text-gray-900 dark:text-white mb-2">Purger les messages en base de
                        donnée</h2>
                    <div>
                        <a href="{{ path('app_backend_dashboard_delete_messages_deleted_by_sender_and_receiver') }}"
                           id="delete-messages-purge-by-sender-and-receiver"
                        >
                            <button type="button"
                                    {{ messageDeletedBySenderAndReceiverCount == 0 ? 'disabled' : '' }}
                                    class="{{ messageDeletedBySenderAndReceiverCount == 0 ? 'cursor-not-allowed' : '' }} block w-full text-xs px-3 h-8 leading-tight text-gray-500 bg-white border border-gray-300 rounded hover:bg-gray-100 hover:text-gray-700 dark:bg-gray-800 dark:border-gray-700 dark:text-gray-400 dark:hover:bg-gray-700 dark:hover:text-white">
                                Supprimer ({{ messageDeletedBySenderAndReceiverCount }})
                            </button>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    {{ encore_entry_script_tags('backend/admin/dashboard') }}
{% endblock %}
