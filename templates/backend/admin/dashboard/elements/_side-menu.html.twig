<button data-drawer-target="sidebar-multi-level-sidebar" data-drawer-toggle="sidebar-multi-level-sidebar"
        aria-controls="sidebar-multi-level-sidebar" type="button"
        class="inline-flex items-center p-2 mt-2 ms-2 text-xs text-gray-500 rounded-lg sm:hidden hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-gray-200 dark:text-gray-400 dark:hover:bg-gray-700 dark:focus:ring-gray-600">
    <span class="sr-only">Open sidebar</span>
    <svg class="w-6 h-6" aria-hidden="true" fill="currentColor" viewBox="0 0 20 20"
         xmlns="http://www.w3.org/2000/svg">
        <path clip-rule="evenodd" fill-rule="evenodd"
              d="M2 4.75A.75.75 0 012.75 4h14.5a.75.75 0 010 1.5H2.75A.75.75 0 012 4.75zm0 10.5a.75.75 0 01.75-.75h7.5a.75.75 0 010 1.5h-7.5a.75.75 0 01-.75-.75zM2 10a.75.75 0 01.75-.75h14.5a.75.75 0 010 1.5H2.75A.75.75 0 012 10z"></path>
    </svg>
</button>

<aside id="sidebar-multi-level-sidebar"
       class="bg-blue-500 fixed top-0 left-0 z-40 w-64 h-screen transition-transform -translate-x-full sm:translate-x-0"
       aria-label="Sidebar">
    <div class="h-full px-3 py-4 overflow-y-auto bg-gray-50 dark:bg-gray-800 no-scrollbar">
        <a href="/" class="flex items-center p-2 mb-5">
            <img src="https://flowbite.com/docs/images/logo.svg" class="h-6 me-3 sm:h-7" alt="Website Logo"/>
            <span class="ms-2 self-center text-xl font-semibold whitespace-nowrap dark:text-white">Website</span>
        </a>

        <hr class="my-2 border-gray-200 dark:border-gray-700" aria-hidden="true">

        <button id="theme-toggle" type="button"
                class="w-full flex items-center p-2 text-gray-900 rounded-lg dark:text-white hover:bg-gray-100 dark:hover:bg-gray-700 group">
            <svg id="theme-toggle-dark-icon" class="hidden w-5 h-5" fill="currentColor" viewBox="0 0 20 20"
                 xmlns="http://www.w3.org/2000/svg">
                <path d="M17.293 13.293A8 8 0 016.707 2.707a8.001 8.001 0 1010.586 10.586z"></path>
            </svg>
            <svg id="theme-toggle-light-icon" class="hidden w-5 h-5" fill="currentColor" viewBox="0 0 20 20"
                 xmlns="http://www.w3.org/2000/svg">
                <path d="M10 2a1 1 0 011 1v1a1 1 0 11-2 0V3a1 1 0 011-1zm4 8a4 4 0 11-8 0 4 4 0 018 0zm-.464 4.95l.707.707a1 1 0 001.414-1.414l-.707-.707a1 1 0 00-1.414 1.414zm2.12-10.607a1 1 0 010 1.414l-.706.707a1 1 0 11-1.414-1.414l.707-.707a1 1 0 011.414 0zM17 11a1 1 0 100-2h-1a1 1 0 100 2h1zm-7 4a1 1 0 011 1v1a1 1 0 11-2 0v-1a1 1 0 011-1zM5.05 6.464A1 1 0 106.465 5.05l-.708-.707a1 1 0 00-1.414 1.414l.707.707zm1.414 8.486l-.707.707a1 1 0 01-1.414-1.414l.707-.707a1 1 0 011.414 1.414zM4 11a1 1 0 100-2H3a1 1 0 000 2h1z"
                      fill-rule="evenodd" clip-rule="evenodd"></path>
            </svg>
            <span class="text-xs ms-3 whitespace-nowrap">Theme</span>
        </button>

        <hr class="my-2 border-gray-200 dark:border-gray-700" aria-hidden="true">

        <a href="{{ path('app_backend_user_backend_profile', {'id': app.user.id}) }}">
            <button type="button"
                    class="w-full flex items-center p-2 text-gray-900 rounded-lg dark:text-white hover:bg-gray-100 dark:hover:bg-gray-700 group">
                {% if app.user.information.pictureProfileName is defined %}
                    <img class="rounded-full w-9 h-9" src="{{ picture_profile_directory ~ app.user.information.pictureProfileName }}" alt="picture profile">
                {% else %}
                    <img class="rounded-full w-6 h-6" src="{{ image_elements_directory ~ 'default-avatar.jpg' }}" alt="picture profile">
                {% endif %}
                <span class="text-xs ms-3 whitespace-nowrap">{{ app.user.username ? app.user.username : app.user.email }}</span>
            </button>
        </a>
        <hr class="my-2 border-gray-200 dark:border-gray-700" aria-hidden="true">

        <a href="{{ path('app_backend_dashboard') }}"
           class="flex items-center p-2 text-gray-900 rounded-lg dark:text-white hover:bg-gray-100 dark:hover:bg-gray-700 group">
            <i class="fa-solid fa-gauge-high w-5 text-gray-500 transition duration-75 dark:text-gray-400 group-hover:text-gray-900 dark:group-hover:text-white"></i>
            <span class="text-xs ms-3">Tableau de bord</span>
        </a>

        <hr class="my-2 border-gray-200 dark:border-gray-700" aria-hidden="true">

        <a href="{{ path('app_backend_user_backend_profile_message_list', {'id': app.user.id}) }}" class="relative">
            <button type="button" class="w-full flex items-center p-2 text-gray-900 rounded-lg dark:text-white hover:bg-gray-100 dark:hover:bg-gray-700 group">
                <i class="fa-solid fa-envelope w-5 text-gray-500 transition duration-75 dark:text-gray-400 group-hover:text-gray-900 dark:group-hover:text-white"></i>
                <span class="text-xs ms-3 whitespace-nowrap">Messages</span>
            </button>
            {% set messageCount = getUserBackendMessageCount(app.user) %}
            {% if messageCount > 0 %}
                <span class="absolute top-0 right-0 inline-flex items-center justify-center w-5 h-5 bg-red-500 text-white rounded-full text-xs">
                    {{ messageCount }}
                </span>
            {% endif %}
        </a>


        <hr class="my-2 border-gray-200 dark:border-gray-700" aria-hidden="true">

        <ul class="space-y-2 font-medium">
            <li>
                <a href="/"
                   class="flex items-center p-2 text-gray-900 rounded-lg dark:text-white hover:bg-gray-100 dark:hover:bg-gray-700 group">
                    <i class="fa-solid fa-desktop w-5 text-gray-500 transition duration-75 dark:text-gray-400 group-hover:text-gray-900 dark:group-hover:text-white"></i>
                    <span class="text-xs flex-1 ms-3 whitespace-nowrap">Voir le site</span>
                </a>
            </li>

            <hr class="my-2 border-gray-200 dark:border-gray-700" aria-hidden="true">

            <h2 class="text-1xl px-3 text-xs font-semibold text-gray-500 uppercase tracking-wider"
                id="headlessui-accordion-group-1-label-0">Données applicatives</h2>

            <li>
                <button type="button"
                        class="flex items-center w-full p-2 text-base text-gray-900 transition duration-75 rounded-lg group hover:bg-gray-100 dark:text-white dark:hover:bg-gray-700"
                        aria-controls="dropdown-frontend-user" data-collapse-toggle="dropdown-frontend-user">
                    <i class="fa-solid fa-user w-5 text-gray-500 transition duration-75 dark:text-gray-400 group-hover:text-gray-900 dark:group-hover:text-white"></i>
                    <span class="text-xs flex-1 ms-3 text-left rtl:text-right whitespace-nowrap">Utilisateurs Frontend</span>
                    <svg class="w-3 h-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none"
                         viewBox="0 0 10 6">
                        <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round"
                              stroke-width="2"
                              d="m1 1 4 4 4-4"/>
                    </svg>
                </button>
                <ul id="dropdown-frontend-user" class="hidden py-2 space-y-2">
                    <li>
                        <a href="#"
                           class="text-xs flex items-center w-full p-2 text-gray-900 transition duration-75 rounded-lg pl-11 group hover:bg-gray-100 dark:text-white dark:hover:bg-gray-700">Liste
                            des utilisateurs</a>
                    </li>
                    <li>
                        <a href="#"
                           class="text-xs flex items-center w-full p-2 text-gray-900 transition duration-75 rounded-lg pl-11 group hover:bg-gray-100 dark:text-white dark:hover:bg-gray-700">Créer
                            un nouvel utilisateur</a>
                    </li>
                </ul>
            </li>

            <hr class="my-2 border-gray-200 dark:border-gray-700" aria-hidden="true">

            <h2 class="text-1xl px-3 text-xs font-semibold text-gray-500 uppercase tracking-wider"
                id="headlessui-accordion-group-1-label-0">Contenu</h2>

            <li>
                <button type="button"
                        class="flex items-center w-full p-2 text-base text-gray-900 transition duration-75 rounded-lg group hover:bg-gray-100 dark:text-white dark:hover:bg-gray-700"
                        aria-controls="dropdown-pages" data-collapse-toggle="dropdown-pages">
                    <i class="fa-solid fa-file w-5 text-gray-500 transition duration-75 dark:text-gray-400 group-hover:text-gray-900 dark:group-hover:text-white"></i>
                    <span class="text-xs flex-1 ms-3 text-left rtl:text-right whitespace-nowrap">Pages</span>
                    <svg class="w-3 h-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none"
                         viewBox="0 0 10 6">
                        <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round"
                              stroke-width="2"
                              d="m1 1 4 4 4-4"/>
                    </svg>
                </button>
                <ul id="dropdown-pages" class="hidden py-2 space-y-2">
                    <li>
                        <a href="{{ path('app_backend_content_page_create') }}"
                           class="text-xs flex items-center w-full p-2 text-gray-900 transition duration-75 rounded-lg pl-11 group hover:bg-gray-100 dark:text-white dark:hover:bg-gray-700">Créer
                            une nouvelle page</a>
                    </li>
                    <li>
                        <a href="{{ path('app_backend_content_page_type_list') }}"
                           class="text-xs flex items-center w-full p-2 text-gray-900 transition duration-75 rounded-lg pl-11 group hover:bg-gray-100 dark:text-white dark:hover:bg-gray-700">Types
                            de page</a>
                    </li>
                    <li>
                        <a href="{{ path('app_backend_content_page_list') }}"
                           class="text-xs flex items-center w-full p-2 text-gray-900 transition duration-75 rounded-lg pl-11 group hover:bg-gray-100 dark:text-white dark:hover:bg-gray-700">Toutes
                            les pages</a>
                    </li>
                    <ul>
                        {% set pageTypes = getPageTypes() %}
                        {% for pageType in pageTypes %}
                            <li>
                                <a href="{{ path('app_backend_content_page_page_type_list', {'id': pageType.id}) }}"
                                   class="text-xs flex items-center w-full p-2 text-gray-900 transition duration-75 rounded-lg pl-11 group hover:bg-gray-100 dark:text-white dark:hover:bg-gray-700">{{ pageType.name }}</a>
                            </li>
                        {% endfor %}
                    </ul>
                </ul>
            </li>

            <li>
                <button type="button"
                        class="flex items-center w-full p-2 text-base text-gray-900 transition duration-75 rounded-lg group hover:bg-gray-100 dark:text-white dark:hover:bg-gray-700"
                        aria-controls="dropdown-media" data-collapse-toggle="dropdown-media">
                    <i class="fa-solid fa-photo-film w-5 text-gray-500 transition duration-75 dark:text-gray-400 group-hover:text-gray-900 dark:group-hover:text-white"></i>
                    <span class="text-xs flex-1 ms-3 text-left rtl:text-right whitespace-nowrap">Médias</span>
                    <svg class="w-3 h-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none"
                         viewBox="0 0 10 6">
                        <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round"
                              stroke-width="2"
                              d="m1 1 4 4 4-4"/>
                    </svg>
                </button>
                <ul id="dropdown-media" class="hidden py-2 space-y-2">
                    <li>
                        <a href="{{ path('app_backend_content_media_list') }}"
                           class="text-xs flex items-center w-full p-2 text-gray-900 transition duration-75 rounded-lg pl-11 group hover:bg-gray-100 dark:text-white dark:hover:bg-gray-700">Bibliothèque</a>
                    </li>
                </ul>
            </li>

            <li>
                <a href="{{ path('app_backend_content_menu_list') }}"
                   class="flex items-center p-2 text-gray-900 rounded-lg dark:text-white hover:bg-gray-100 dark:hover:bg-gray-700 group">
                    <i class="fa-solid fa-bars w-5 text-gray-500 transition duration-75 dark:text-gray-400 group-hover:text-gray-900 dark:group-hover:text-white"></i>
                    <span class="text-xs ms-3">Menus</span>
                </a>
            </li>

            <hr class="my-2 border-gray-200 dark:border-gray-700" aria-hidden="true">

            <h2 class="text-1xl px-3 text-xs font-semibold text-gray-500 uppercase tracking-wider"
                id="headlessui-accordion-group-1-label-0">Données avancées</h2>

            <li>
                <button type="button"
                        class="flex items-center w-full p-2 text-base text-gray-900 transition duration-75 rounded-lg group hover:bg-gray-100 dark:text-white dark:hover:bg-gray-700"
                        aria-controls="dropdown-backend-user" data-collapse-toggle="dropdown-backend-user">
                    <i class="fa-solid fa-user w-5 text-gray-500 transition duration-75 dark:text-gray-400 group-hover:text-gray-900 dark:group-hover:text-white"></i>
                    <span class="text-xs flex-1 ms-3 text-left rtl:text-right whitespace-nowrap">Utilisateurs Backend</span>
                    <svg class="w-3 h-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none"
                         viewBox="0 0 10 6">
                        <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round"
                              stroke-width="2"
                              d="m1 1 4 4 4-4"/>
                    </svg>
                </button>
                <ul id="dropdown-backend-user" class="hidden py-2 space-y-2">
                    <li>
                        <a href="{{ path('app_backend_advanced_data_user_backend_list') }}"
                           class="text-xs flex items-center w-full p-2 text-gray-900 transition duration-75 rounded-lg pl-11 group hover:bg-gray-100 dark:text-white dark:hover:bg-gray-700">Liste
                            des utilisateurs</a>
                    </li>
                    <li>
                        <a href="{{ path('app_backend_advanced_data_user_backend_create') }}"
                           class="text-xs flex items-center w-full p-2 text-gray-900 transition duration-75 rounded-lg pl-11 group hover:bg-gray-100 dark:text-white dark:hover:bg-gray-700">Créer
                            un nouvel utilisateur</a>
                    </li>
                </ul>
            </li>

            <li>
                <button type="button"
                        class="flex items-center w-full p-2 text-base text-gray-900 transition duration-75 rounded-lg group hover:bg-gray-100 dark:text-white dark:hover:bg-gray-700"
                        aria-controls="dropdown-data" data-collapse-toggle="dropdown-data">
                    <i class="fa-solid fa-database w-5 text-gray-500 transition duration-75 dark:text-gray-400 group-hover:text-gray-900 dark:group-hover:text-white"></i>
                    <span class="text-xs flex-1 ms-3 text-left rtl:text-right whitespace-nowrap">Données</span>
                    <svg class="w-3 h-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none"
                         viewBox="0 0 10 6">
                        <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round"
                              stroke-width="2"
                              d="m1 1 4 4 4-4"/>
                    </svg>
                </button>
                <ul id="dropdown-data" class="hidden py-2 space-y-2">
                    <li>
                        <a href="{{ path('app_backend_advanced_data_data_enum_list') }}"
                           class="text-xs flex items-center w-full p-2 text-gray-900 transition duration-75 rounded-lg pl-11 group hover:bg-gray-100 dark:text-white dark:hover:bg-gray-700">Toutes
                            les données</a>
                    </li>
                    <li>
                        <a href="{{ path('app_backend_advanced_data_data_enum_create') }}"
                           class="text-xs flex items-center w-full p-2 text-gray-900 transition duration-75 rounded-lg pl-11 group hover:bg-gray-100 dark:text-white dark:hover:bg-gray-700">Créer
                            une nouvelle donnée</a>
                    </li>
                </ul>
            </li>

            <hr class="my-2 border-gray-200 dark:border-gray-700" aria-hidden="true">

            <li>
                <a href="/backend/logout"
                   class="flex items-center p-2 text-gray-900 rounded-lg dark:text-white hover:bg-gray-100 dark:hover:bg-gray-700 group">
                    <i class="fa-solid fa-right-from-bracket w-5 text-gray-500 transition duration-75 dark:text-gray-400 group-hover:text-gray-900 dark:group-hover:text-white"></i>
                    <span class="text-xs ms-3">Déconnexion</span>
                </a>
            </li>

            <hr class="my-2 border-gray-200 dark:border-gray-700" aria-hidden="true">
        </ul>
    </div>
</aside>
